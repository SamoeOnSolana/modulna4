@model User

<div class="card mb-3" style="max-width: 300px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Avatar" class="img-fluid rounded-start" alt="аватар" id="userAvatar">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Email</p>
            </div>
        </div>
    </div>
</div>
